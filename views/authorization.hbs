<body>
    <div class="container" style="width:90%; height: 90%; display: flex; align-items: center; margin-left:auto; margin-right:auto;">
        <div class="col-md-7 center-form">  
            <main class="form-signin signin-form">
                <form action="/authorization" method="post" class="border-form">
                    <h1 class="h3 mb-3 fw-normal" style="text-align: center;">ВХОД В СИСТЕМУ</h1>
                    
                    <div class="floating-form-group" style="width: 90%; margin-bottom:0.374em;">
                        <input type="text" class="floating-input" id="Email_address" placeholder="Login" name="Email_address" required>
                        <label for="Email_address" class="floating-label">Login</label>
                    </div>
                    <div class="floating-form-group" style="width: 90%; margin-bottom:0.374em;">
                        <input type="password" class="floating-input" id="Password" placeholder="Password" name="Password" required>
                        <label for="Password" class="floating-label">Password</label>
                    </div>
                    
                    <div style="text-align: center; margin-bottom:0.374em;">
                        <button class="btn btn-primary py-2" type="submit" style="margin: auto; width: 80%;">Sign in</button>
                    </div>

                    {{#if message}}
                        <div class="py-1 glass" style="margin-top: 20px; text-align: center; font-size: small;">
                            {{message}}
                            {{#if reset }}
                                {{reset}}
                                <a href="./reset_password" class="reset-btn">(RESET PASSWORD)</a>
                            {{/if}}
                        </div>
                    {{/if}}
                </form>
            </main>
        </div>
    </div>
