<!DOCTYPE html>
<html data-bs-theme="dark" style="background-color: #2c2c2c; color: white;">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1 shrink-to-fit=no">
    <title>Расписание</title>
    <link rel="icon" href="/drawable/user-id-svg.svg" type="image/svg">
    <link rel="stylesheet" href="/form.css">
    <link rel="stylesheet" href="/style-set.css">
</head>
<html>
    <body onload="checkWindowSize()">
        <div class="row row-cols-3" id="body_tb">
        </div>

        <div class="row row-cols-3 justify-content-center" id="body_btn" style="width: 100%; margin-left:auto; margin-right:auto; margin-top:20px">
            <button type="button" class="btn btn-primary" style="width: 20%;" onclick="backWeek()">Назад</button>
            <button class="btn btn-primary" style="margin-left:20px; margin-right:20px;" data-bs-toggle="modal" data-bs-target="#exampleModal" >Выбрать неделю</button>
            <button type="button" class="btn btn-primary" style="width: 20%;" onclick="nextWeek()">Вперёд</button>
        </div>

        {{#if pair}}
            <section id="pair_mas" hidden>
                {{pair}}
            </section>
        {{/if}}

        {{#if dates}}
            <section id="info_dates" hidden>
                {{dates}}
            </section>
        {{/if}}

        {{#if schedule}}
            <section id="info_schedule" hidden>
                {{json schedule}}
            </section>
        {{/if}}

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Календарь</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="d-flex justify-content-center" style="width: 100%;">
                            <input type="week" class="form-control" id="weekPicker" onchange="handleWeekChange(this.value)">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <form action="./schedule" method="post" id="weekForm">
                            <input hidden type="text" id="week_date_select" name="week_date_select"></input>
                            <button class="btn btn-secondary" data-bs-dismiss="modal" type="submit" >Выбрать</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <style>
            tr,th,caption,td {
                text-align: center;
            }

            table{
                border-collapse: collapse;
                width: 100%;
                height: 100%;
            }

            #body_tb{
                width: 100%;
                margin-left: auto;
                margin-right: auto;
            }
        </style>

        <script src="/design-js/table_size.js"></script>
        <script src="/design-js/calendar_select.js"></script>

    </body>
</html>


